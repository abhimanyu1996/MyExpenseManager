<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/btn_del"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_dnt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_desc"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textSize="10sp" />

    <Switch
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_desc"
        android:layout_toLeftOf="@+id/tv_dnt"
        android:layout_centerVertical="true"
         />

   <at.markushi.ui.CircleButton
       android:layout_height="60dp"
       android:layout_width="60dp"
       app:cb_color="@android:color/holo_red_dark"
       app:cb_pressedRingWidth="10dp"
       android:src="@drawable/ic_rubbish_bin"
       android:id="@+id/btn_del"
       android:layout_toLeftOf="@+id/edit"
       />

    <at.markushi.ui.CircleButton
        android:layout_height="60dp"
        android:layout_width="60dp"
        app:cb_color="#ac0088"
        app:cb_pressedRingWidth="10dp"
        android:src="@drawable/ic_edit"
        android:id="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19dp" />


</RelativeLayout>